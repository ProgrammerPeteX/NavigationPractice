<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/goToFrag3_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/goToFrag3"
            app:layout_constraintBottom_toTopOf="@+id/goToFrag4_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/goToFrag4_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/goToFrag4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/goToFrag3_button" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>